:root {
    --width: 860px;

    /* colors */
    --active: #4597de;
    --border-color: #eee;
    --silver: #666;

    /* fonts */
    --serif: 'Playfair Display', serif;
    --text: 'Roboto Condensed';

    --font-smooth: {
        font-smoothing: antialiased;
        backface-visibility: hidden;
        -webkit-backface-visibility: hidden;
    };

    --transition: {
        transition: all 0.3s ease;
    };
}