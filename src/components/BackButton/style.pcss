@import "../../public/css/variables.pcss";

.button {
  padding: 6px 10px;
  border-radius: 1px;
  background-color: var(--active);
  color: #fff;
  border: 0;
  cursor: pointer;
  position: relative;
  font-size: 14px;
  font-weight: bold;
  outline: none;

  &:hover {
    opacity: 0.9;
  }

  &:active {
    top: 1px;
  }
}